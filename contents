            <h1>Profile</h1>
            <figure>
                <img src = "images/profile.png" width = "135px" height = "135px" alt = "profile_icon" class = "pf_icon">
                <img src = "images/Croon_2.jpeg" width = "402px" height = "84px" alt = "profile_rectangle_1" class = "profile_img_2">
